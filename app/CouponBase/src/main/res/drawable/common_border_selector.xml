<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/white" android:state_selected="true">
        <shape>
            <solid android:color="@color/snow" />
            <stroke android:width="0.5dp" android:color="@color/divider_color" />
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
        </shape>
    </item>
    <item android:drawable="@color/light_gray" android:state_pressed="true">
        <shape>
            <solid android:color="@color/snow" />
            <stroke android:width="0.5dp" android:color="@color/divider_color" />
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
        </shape>
    </item>
    <item android:drawable="@color/white" android:state_enabled="false">
        <shape>
            <solid android:color="@color/snow" />
            <stroke android:width="0.5dp" android:color="@color/divider_color" />
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
        </shape>
    </item>
    <item android:drawable="@color/white" android:state_enabled="true">
        <shape>
            <solid android:color="@color/snow" />
            <stroke android:width="0.5dp" android:color="@color/divider_color" />
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
        </shape>
    </item>
    <item android:drawable="@color/white">
        <shape>
            <solid android:color="@color/snow" />
            <stroke android:width="0.5dp" android:color="@color/divider_color" />
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
        </shape>
    </item>
</selector>