<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_translate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/review_images_rv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.manash.purpllebase.views.PurplleTextView
            android:id="@+id/tv_translate"
            style="@style/man_bold_10ssp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="true"
            android:textColor="@color/purplle_base"
            android:textSize="@dimen/_12ssp"
            android:text="@string/translate_review_to_language"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/vw_underline"
            android:layout_width="@dimen/_0dp"
            android:layout_height="@dimen/_2dp"
            android:layout_marginTop="@dimen/_2dp"
            android:background="@color/purplle_base"
            app:layout_constraintEnd_toEndOf="@id/tv_translate"
            app:layout_constraintStart_toStartOf="@id/tv_translate"
            app:layout_constraintTop_toBottomOf="@id/tv_translate" />


    </androidx.constraintlayout.widget.ConstraintLayout>
