<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/check_box_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.manash.purpllebase.views.PurplleTextView
        android:id="@+id/tv_title"
        style="@style/manrope_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15dp"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/licorice_black"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintTop_toTopOf="parent" />


    <CheckBox
        app:layout_constraintEnd_toEndOf="@id/end_guideline"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/cb_view"
        style="@style/icon"
        android:clickable="false"
        android:buttonTint="@color/dark_washed_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:layout_marginTop="@dimen/_6dp"
        android:background="?selectableItemBackgroundBorderless"
        android:gravity="center"
        android:textSize="@dimen/_20sp" />

    <View
        android:id="@+id/view"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintEnd_toEndOf="@id/end_guideline"
        android:background="@color/skin_analyser_result_card_section_border"
        android:layout_marginTop="@dimen/_15dp"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline"
        app:layout_constraintGuide_begin="@dimen/_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guideline"
        app:layout_constraintGuide_end="@dimen/_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />


</androidx.constraintlayout.widget.ConstraintLayout>