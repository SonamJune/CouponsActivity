<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="oval">
            <gradient
                android:angle="270"
                android:centerColor="#BA555555"
                android:centerX="50%p"
                android:centerY="50%p"
                android:endColor="#002E2E2E"
                android:gradientRadius="50%p"
                android:startColor="#090909"
                android:type="radial" />
            <size
                android:width="100dp"
                android:height="100dp" />

        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>

