<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notification"
    android:layout_gravity="center"
    android:layout_width="278dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40dp"
        android:background="#FFFFFF">

    <com.manash.purpllebase.views.PurplleTextView
        android:id="@+id/congrats_text"
        style="@style/man_bold_14ssp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_45dp"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="@dimen/_20dp"
        android:fontFamily="serif"
        android:text="@string/congratulations_text"
        android:textColor="@color/black" />

    <com.manash.purpllebase.views.PurplleTextView
        android:id="@+id/coupon_code_txt"
        style="@style/man_bold_12ssp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/congrats_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_22dp"
        android:paddingLeft="@dimen/_15dp"
        android:paddingRight="@dimen/_15dp"
        android:gravity="center"
        tools:text="Coupon Code 'Sugar 30' Successfully Applied"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/gift_item"
        android:layout_width="179dp"
        android:layout_height="179dp"
        app:layout_constraintTop_toBottomOf="@id/congrats_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="70dp"/>

    <com.manash.purpllebase.views.PurplleTextView
        android:id="@+id/free_gift_text"
        style="@style/man_regular_14ssp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coupon_code_txt"
        android:layout_marginTop="185dp"
        android:gravity="center"
        android:paddingLeft="@dimen/_16dp"
        android:paddingRight="@dimen/_15dp"
        tools:text="Free gift worth â‚¹100 has been added to your cart."
        android:textColor="@color/black" />

        <com.manash.purpllebase.views.PurplleTextView
            android:id="@+id/dismiss_text_yay"
            style="@style/man_bold_14ssp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/free_gift_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/_19dp"
            android:paddingBottom="@dimen/_16dp"
            android:text="@string/_yay"
            android:textColor="@color/purplle_base"/>
</androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/cafg_icon"
        android:layout_width="82dp"
        android:layout_height="77dp"
        android:layout_gravity="center_horizontal"/>
</FrameLayout>