<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MultiStateToggleButton"><attr format="reference" name="values"/><attr format="reference" name="mstbPrimaryColor"/><attr format="reference" name="mstbSecondaryColor"/><attr format="reference" name="mstbColorPressedText"/><attr format="reference" name="mstbColorPressedBackground"/><attr format="reference" name="mstbColorPressedBackgroundResource"/><attr format="reference" name="mstbColorNotPressedText"/><attr format="reference" name="mstbColorNotPressedBackground"/><attr format="reference" name="mstbColorNotPressedBackgroundResource"/></declare-styleable>

    <style name="LightTheme" parent="AppTheme">
        <item name="textColor">#000000</item>
        <item name="bgColor">#ffffff</item>
        <item name="iconColor">#2c414c</item>
        <item name="skeletonColor">@color/smokey_white</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="textColor">#ffffff</item>
        <item name="bgColor">#000000</item>
        <item name="iconColor">#ffffff</item>
<!--        <item name="skeletonColor">@color/smokey_dark</item>-->
    </style>

    <style name="collapsingToolBarTitle">
        <item name="android:textStyle">bold</item>
        <item name="textColor">@color/black</item>
        <item name="purplle_typeface">manrope_bold</item>
        <item name="android:textSize">@dimen/_16dp</item>
    </style>

    <style name="blushEditText" parent="Theme.AppCompat.Light">
<!--        <item name="colorControlNormal">@color/indigo</item>-->
<!--        <item name="colorControlActivated">@color/add_to_cart_violet</item>-->
    </style>

    <style name="variants_popup_chip_style" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/product_name_lite_black_color</item>
        <item name="android:textSize">@dimen/_12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="purplle_typeface">manrope_bold</item>
    </style>

    <style name="ArrowButtonFeatureToolTip">
        <item name="ttlm_padding">@dimen/ttlm_default_padding</item>
        <item name="ttlm_strokeColor">@android:color/transparent</item>
<!--        <item name="ttlm_backgroundColor">@color/arrow_button_tooltip_bg</item>-->
        <item name="ttlm_backgroundColor_new">@color/tooltip_header</item>
        <item name="ttlm_strokeWeight">@dimen/ttlm_default_stroke_weight</item>
        <item name="ttlm_cornerRadius">@dimen/ttlm_default_corner_radius</item>
        <item name="ttlm_arrowRatio">1.4</item>
        <item name="android:textAppearance">@style/ArrowButtonToolTipTextStyle</item>
        <item name="ttlm_overlayStyle">@style/ArrowButtonToolTipOverlayDefaultStyle</item>
        <item name="ttlm_elevation">@dimen/ttlm_default_elevation</item>
    </style>

    <style name="ArrowButtonToolTipOverlayDefaultStyle">
<!--        <item name="android:color">@color/arrow_button_tooltip_bg</item>-->
        <item name="ttlm_repeatCount">2</item>
        <item name="ttlm_duration">600</item>
        <item name="android:alpha">0.2</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
<!--        <item name="android:textColorHint">@color/grey</item>-->
        <item name="boxCornerRadiusBottomEnd">@dimen/_4dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_4dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_4dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_4dp</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">@dimen/_1dp</item>
        <item name="hintTextColor">@color/colorAccent</item>
    </style>

    <style name="ChooseGiftDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="PrimaryNormalText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ToggleStyle">
        <item name="android:padding">@dimen/_15dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textColorSecondary">?attr/colorControlNormal</item>
        <item name="android:minHeight">@dimen/_15dp</item>
    </style>
    <style name="WhiteBoldText" parent="@android:style/Widget">
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>