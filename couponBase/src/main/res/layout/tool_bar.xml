<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/toolbar_theme"
    android:layout_width="fill_parent"
    android:layout_height="?android:actionBarSize"
    android:background="@color/white"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:elevation="@dimen/_4dp"
    android:paddingRight="@dimen/_8dp"
    app:layout_scrollFlags="scroll|enterAlways"
    app:popupTheme="@style/popup_menu_style">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/purplle_logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_purplle_logo" />

        <ImageView
            android:id="@+id/purplle_elite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginLeft="3dp"
            android:background="?selectableItemBackground"
            android:visibility="gone" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <com.example.couponbase.views.PurplleTextView
        android:id="@+id/toolbar_title"
        style="@style/serif_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:letterSpacing="0.02"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/dark_gray_color"
        android:visibility="visible" />

</LinearLayout>
</androidx.appcompat.widget.Toolbar>